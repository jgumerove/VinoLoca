<h1>Add a wine to your collection</h1>

<%= form_for @wine do |f| %>

  <%= render partial: "layouts/errors", locals: {record: @wine} %>
  <%= f.label :title %>
  <%= f.text_field :title %><br/>

  <%= f.label :category %>
  <%= f.select :category, wine_category_array, :prompt => 'Select One' %><br/>
    
  <%= f.label :year %>
  <%= f.number_field :year %><br/>

  <%= f.label :rating %>
  <%= f.number_field :rating %><br/>

  <%= f.label :price %>
  <%= f.number_field :price %><br/>

  <%= f.label :country_id, "Select a country" %>
  <%= f.collection_select :country_id, Country.all, :id, :name, prompt: true %><br/>

  <%= f.submit %>
<% end %>
