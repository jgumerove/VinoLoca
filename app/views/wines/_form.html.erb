<%= form_for ([@country, @wine]) do |f| %>

<%= render partial: "layouts/errors", locals: {record: @wine} %>

  <%= f.label :title %>
  <%= f.text_field :title %><br/>

  <%= f.label :category %>
  <%= f.text_field :category %><br/>

  <%= f.label :year %>
  <%= f.number_field :year %><br/>

  <%= f.label :rating %>
  <%= f.number_field :rating %><br/>

  <%= f.label :price %>
  <%= f.number_field :price %><br/>

  <%= f.label :country_id, "Select a country" %>
  <%= f.collection_select :country_id, Country.all, :id, :name, prompt: true %><br/>

  <%= f.submit %>

<% end %>

<%= link_to "View All wines from #{@country.name}", country_wines_path(@country)%><br/>
<%= link_to "View All Countries in Wine Collection", countries_path %>